# ── Database ──────────────────────────────────────────────────────
POSTGRES_DB=ssh_radar
POSTGRES_USER=ssh_radar
POSTGRES_PASSWORD=CHANGE_ME_secure_password_here

# ── Grafana ──────────────────────────────────────────────────────
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_grafana_admin_password

# ── Domain ───────────────────────────────────────────────────────
# Your public domain — used in Grafana root URL and Nginx config
DOMAIN=ssh-radar.antonsatt.com

# ── MaxMind GeoLite2 ─────────────────────────────────────────────
# Get a free license key at https://www.maxmind.com/en/geolite2/signup
# Account ID is shown at https://www.maxmind.com/en/accounts/current
MAXMIND_ACCOUNT_ID=your_maxmind_account_id_here
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here

# ── Ingestion (used by host-based cron script) ───────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ssh_radar
DB_USER=ssh_radar
DB_PASSWORD=CHANGE_ME_secure_password_here
# Absolute path to the GeoLite2 database — adjust to match your install location
# MAXMIND_DB_PATH=/home/ubuntu/apps/ssh-radar/data/GeoLite2-City.mmdb

# ── Logging ──────────────────────────────────────────────────────
LOG_LEVEL=INFO
